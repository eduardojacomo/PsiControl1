<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ButtonSearch" TargetType="Button">
        <Setter Property="Background" Value="#ffffff"/>
        <Setter Property="Foreground" Value="#3084f2"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="150" />
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#3084f2"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="0 3 3 0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#f9f9f9"/>
                <Setter Property="Foreground" Value="#044bd9"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>